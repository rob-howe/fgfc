li.dropdown.yamm-fullwidth
  a.dropdown-toggle href="#" data-toggle="dropdown" TEAMS <b class="caret"></b>
  ul.dropdown-menu
    li
      .yamm-content
        .row
          .col-md-8
            h4 Mini Soccer
            - @mini_soccer.each do |key, value|
              div.team-menu-item
                strong #{key.to_s.upcase}
                - value.each do |team|
                  div
                    a href="/team/#{key.to_s}#{team.to_s}" #{team.to_s.capitalize}
          .col-md-2
            h4 Girls Football
            - @girls_football.each do |team|
              div
                a href="/team/#{team.to_s}girls" #{team.to_s.capitalize}
          .col-md-2
            h4 Adult Football
            - @adult_football.each do |team|
              div
                a href="/team/#{team.to_s}" #{team.to_s.capitalize}
        .container
          .col-md-2
            p &nbsp;
          .col-md-2
        .row
          .col-md-10
            h4 Youth Football
            - @youth_football.each do |key, value|
              div.team-menu-item
                strong #{key.to_s.upcase}
                - value.each do |team|
                  div
                    a href="/team/#{key.to_s}#{team.to_s}" #{team.to_s.capitalize}
          .col-md-2
            h4 Baseball
            div
              a href="http://www.essexredbacks.com/little-league/broncos/" target="_blank" U14 Broncos
            div
              a href="http://www.essexredbacks.com/little-league/pony/" target="_blank" U17 Ponys
        .container
          .col-md-3
            p &nbsp;
          .col-md-2
